{% comment %}
  Renders product variant options

  Accepts:
  - product: {Object} product object.
  - option: {Object} current product_option object.
  - block: {Object} block object.
  - picker_type: {String} type of picker to dispay


  Usage:
  {% render 'product-variant-options',
    product: product,
    option: option,
    block: block
    picker_type: picker_type
  %}
{% endcomment %}
{%- liquid
  assign product_form_id = 'product-form-' | append: section.id
-%}

{%- for value in option.values -%}
  {%- liquid
    assign image_url = null

    # Zoek de variant op basis van de huidige waarde
    assign matching_variant = product.variants | where: 'option1', value | first

    # Controleer of de variant een featured image heeft
    if matching_variant and matching_variant.featured_image
      assign image_url = matching_variant.featured_image | image_url: width: 100
    endif

    assign option_disabled = true
    if value.available
      assign option_disabled = false
    endif
  -%}

  {%- capture input_id -%}
    {{ section.id }}-{{ option.position }}-{{ forloop.index0 -}}
  {%- endcapture -%}

  {%- capture input_name -%}
    {{ option.name }}-{{ option.position }}
  {%- endcapture -%}

  {%- capture input_dataset -%}
    data-product-url="{{ value.product_url }}"
    data-option-value-id="{{ value.id }}"
  {%- endcapture -%}

  {%- capture label_unavailable -%}
    <span class="visually-hidden label-unavailable">
      {{- 'products.product.variant_sold_out_or_unavailable' | t -}}
    </span>
  {%- endcapture -%}

  <input
    type="radio"
    id="{{ input_id }}"
    name="{{ input_name | escape }}"
    value="{{ value | escape }}"
    form="{{ product_form_id }}"
    {% if value.selected %}
      checked
    {% endif %}
    {% if option_disabled %}
      class="disabled"
    {% endif %}
    data-variant-id="{{ value | escape }}"
    data-variant-image="{% if value.featured_media != null %}{{ value.featured_media.preview_image | image_url: width: 1024 }}{% else %}{{ 'default-image.jpg' | asset_url }}{% endif %}"
    data-variant-alt="{{ value.featured_media.alt }}"
    data-variant-color="{{ value | escape }}"
    {{ input_dataset }}
  >
  <label for="{{ input_id }}">
    {%- if image_url -%}
      <img src="{{ image_url }}" alt="{{ value | escape }}" class="variant-image image-class {% if value.selected %}checked{% endif %}{% if option_disabled %}disabled{% endif %}" />
    {%- else -%}
      <span class="variant-text text-class {% if value.selected %}checked{% endif %}{% if option_disabled %} disabled{% endif %}">{{ value }}</span>
    {%- endif %}
    {{ label_unavailable }}
  </label>

<!-- JavaScript to update the featured image -->
<script>
  // Function to update the featured image dynamically
  function updateFeaturedImage(imageUrl, altText) {
    const featuredImage = document.getElementById('featured-image-{{ product.selected_or_first_available_variant.id }}');
    if (featuredImage) {
      featuredImage.src = imageUrl;
      featuredImage.alt = altText;
    }
  }

  // Event listener for radio button change
  document.addEventListener('DOMContentLoaded', function() {
    // Select all radio buttons for variant options
    const variantRadios = document.querySelectorAll('input[type="radio"][name="{{ input_name | escape }}"]');
    
    variantRadios.forEach((radio) => {
      radio.addEventListener('change', function() {
        // When a radio button is selected, get the corresponding variant image and alt text
        const imageUrl = this.getAttribute('data-variant-image');
        const altText = this.getAttribute('data-variant-alt');
        
        // Update the featured image based on the selected variant
        updateFeaturedImage(imageUrl, altText);
      });
    });
  });
</script>




