{% comment %}
  Renders a product media gallery. Should be used with 'media-gallery.js'
  Also see 'product-media-modal'

  Accepts:
  - product: {Object} Product liquid object
  - variant_images: {Array} Product images associated with a variant
  - limit: {Number} (optional) When passed, limits the number of media items to render

  Usage:
  {% render 'product-media-gallery' %}
{% endcomment %}

{% assign selected_color = product.selected_or_first_available_variant.option1 | downcase %} <!-- Geselecteerde kleur (option1) -->

{% assign sorted_media = product.media | sort: 'id' %}
{% assign reversed_media = sorted_media | reverse %}

<media-gallery
  id="MediaGallery-{{ section.id }}"
  role="region"
  aria-label="{{ 'products.product.media.gallery_viewer' | t }}"
  class="product__media-gallery"
>
  <!-- Featured Image -->
  {% if product.selected_or_first_available_variant.featured_media != null %}
    <div 
      class="product__media-item featured-media col-12" 
      data-variant-color="{% if product.selected_or_first_available_variant.featured_media.alt contains 'color|' %}{{ product.selected_or_first_available_variant.featured_media.alt | split: '|' | last | downcase }}{% else %}all{% endif %}"
    >
      <img
        id="featured-image"
        src="{{ product.selected_or_first_available_variant.featured_media.preview_image | image_url: width: 1024 }}"
        alt="{{ product.selected_or_first_available_variant.featured_media.alt }}"
        class="featured-media__image"
      />
    </div>
  {% endif %}

  <!-- Thumbnails -->
  <div class="row media-thumbnails grid grid--gap">
    {% for media in reversed_media %}
      {% assign media_color = media.alt | downcase %}
      {% if media_color == selected_color or media_color == 'all' %}
        <div 
          class="product__media-item media-thumbnail col-3" 
          data-variant-color="{% if media.alt contains 'color|' %}{{ media.alt | split: '|' | last | downcase }}{% else %}all{% endif %}"
          data-media-id="{{ media.id }}"
        >
          <img
            src="{{ media.preview_image | image_url: width: 416 }}"
            alt="{{ media.alt }}"
            class="media-thumbnail__image"
            onclick="updateFeaturedImage('{{ media.preview_image | image_url: width: 1024 }}', '{{ media.alt }}')"
          />
        </div>
      {% endif %}
    {% endfor %}
  </div>
</media-gallery>




