{{ 'collection-navigation.css' | asset_url | stylesheet_tag }}

<section class="col-12 logo-grid-section">
  <h2 class="container-desktop title-brands">{{ section.settings.title }}</h2>
  <ul class="logo-grid">
    {% for block in section.blocks %}
      {% assign collection = block.settings.collection %}
      {% if collection %}
        {% assign collection_obj = collections[collection] %}
        <li class="col-12 logo-grid-item col-md-3" style="position: relative; background-image: url({{ block.settings.background_image | file_url | replace: 'files/files', 'files' }}); background-size: cover; background-position: center; background-repeat: no-repeat;">
          <a href="{{ collection_obj.url }}" style="display: inline-block; width: 100%; height: 100%; position: relative; text-align: center;">
            {% if block.settings.logo_image %}
              <img src="{{ block.settings.logo_image | file_url | replace: 'files/files', 'files' }}" alt="{{ collection_obj.title }}" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); max-width: 100px; height: auto;">
            {% endif %}
          </a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</section>

{% schema %}
{
  "name": "Brand Logo Grid",
  "settings": [
    {
      "id": "title",
      "type": "text",
      "label": "Section Title",
      "default": "Our Brands"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "id": "background_image",
          "type": "image_picker",
          "label": "Background Image"
        },
        {
          "id": "logo_image",
          "type": "image_picker",
          "label": "Logo Image (SVG or PNG)"
        },
        {
          "id": "collection",
          "type": "collection",
          "label": "Select a Collection"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Brand Logos",
      "settings": {
        "title": "Shop by Brand"
      },
      "blocks": [
        {
          "type": "logo",
          "settings": {
            "background_image": "",
            "logo_image": "",
            "collection": ""
          }
        },
        {
          "type": "logo",
          "settings": {
            "background_image": "",
            "logo_image": "",
            "collection": ""
          }
        }
      ]
    }
  ]
}
{% endschema %}
