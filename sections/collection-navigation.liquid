{{ 'collection-navigation.css' | asset_url | stylesheet_tag }}

<section class="logo-grid-section">
  <h2>{{ section.settings.title }}</h2>
  <ul class="logo-grid">
    {% for block in section.blocks %}
      {% assign collection = block.settings.collection %}
      {% if collection %}
        {% assign collection_obj = collections[collection] %}
        <li class="logo-grid-item">
          <a href="{{ collection_obj.url }}">
            <img src="{{ block.settings.image | file_url }}" alt="{{ collection_obj.title }}" style="max-width: 100%; height: auto;">
          </a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</section>

{% schema %}
{
  "name": "Logo Grid",
  "settings": [
    {
      "id": "title",
      "type": "text",
      "label": "Sectie Titel",
      "default": "Onze Merken"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Logo Afbeelding"
        },
        {
          "id": "collection",
          "type": "collection",
          "label": "Kies een collectie"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Merk Logo's",
      "settings": {
        "title": "Shop op Merk"
      },
      "blocks": [
        {
          "type": "logo",
          "settings": {
            "image": "",
            "collection": ""
          }
        },
        {
          "type": "logo",
          "settings": {
            "image": "",
            "collection": ""
          }
        }
      ]
    }
  ]
}
{% endschema %}

    