  .menu-drawer-container {
    display: flex;
  }

  .list-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .list-menu--inline {
    display: inline-flex;
    flex-wrap: wrap;
  }

  summary.list-menu__item {
    padding-right: 2.7rem;
  }

  .list-menu__item {
    display: flex;
    align-items: center;
    line-height: calc(1 + 0.3 / var(--font-body-scale));
  }

  .list-menu__item--link {
    text-decoration: none;
    padding-bottom: 1rem;
    padding-top: 1rem;
    line-height: calc(1 + 0.8 / var(--font-body-scale));
  }

  @media screen and (min-width: 750px) {
    .list-menu__item--link {
      padding-bottom: 0.5rem;
      padding-top: 0.5rem;
    }
  }

  /* Ensure higher specificity to override other styles */
  #cart-icon .desktop-cart-text {
    display: none; /* Default hidden for mobile */
  }
  #cart-icon .mobile-cart-icon {
    display: inline-block; /* Default visible for mobile */
  }

  @media (min-width: 768px) { /* Adjust the breakpoint if necessary */
    #cart-icon .desktop-cart-text {
      display: inline-block; /* Show for desktop */
    }
    #cart-icon .mobile-cart-icon {
      display: none; /* Hide for desktop */
    }
  }

  /* Transparent header for desktop only */
  .header-wrapper--transparent {
    background-color: transparent;
    position: absolute;
    z-index: 10;
    width: 100%;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  /* For mobile devices, disable transparency */
  @media screen and (max-width: 750px) {
    .header-wrapper--transparent {
      background-color: white !important; /* Always solid background for mobile */
      position: relative;
    }

    .header-wrapper--transparent .header__heading-link,
    .header-wrapper--transparent .header__icon {
      color: black; /* Ensure icons and text are visible */
    }
  }

  @media (prefers-color-scheme: light) {
  /* Scroll-activated header */
    .scrolled-past-header .header-wrapper--transparent {
      background-color: var(--menu-background-color);
    }
  }

  @media (prefers-color-scheme: dark) {
    .scrolled-past-header .header-wrapper--transparent {
    background-color: var(--menu-background-color); /* Wordt wit bij scrollen */
    }
  }

  /* Standard transparant header */
  .section-header {
    position: -webkit-sticky;
    position: sticky;
    top: 0;
    z-index: 1000;
    transition: transform 0.3s ease, opacity 0.3s ease, background-color 0.3s ease, color 0.3s ease, width 0.3s ease;
    }

    .section-header.transparent {
        background-color: transparent;
        color: white;
    }

    .section-header.scrolled-past-header {
        background-color: white;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        transform: translateY(0);
    }

    .section-header.hidden {
        transform: translateY(-100%);
        opacity: 0;
    }

    .section-header.reduce-logo .header__heading-logo-wrapper {
        width: 75%;
    }

  @media screen and (min-width: 750px) {
    .section-header {
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .header {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
