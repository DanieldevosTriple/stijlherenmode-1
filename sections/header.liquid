<script>
  const selector = ".elixon-fits-in";
  var watchList = Array.from(document.querySelectorAll(selector))
      .map((el) => el.parentNode);

  const resize = function (watchEl) {
      watchEl.querySelectorAll(':scope > ' + selector)
          .forEach(function (el) {
              const parentWidth = el.parentNode.clientWidth;
              const elWidth = el.clientWidth;

              if (elWidth > 0) { // Zorg ervoor dat elWidth geldig is
                  let scale = parentWidth / elWidth;

                  el.style.setProperty("--efiScale", scale);
                  el.style.setProperty("--efiHeightDiff", el.clientHeight * (scale - 1) + "px");
              } else {
                  console.warn("Element width is 0, skipping resize", el);
              }
          });
  };

  const observer = new ResizeObserver(function (entries) {
      for (let entry of entries) {
          resize(entry.target);
      }
  });

  watchList.forEach(function (el) {
      if (el) {
          resize(el);
          observer.observe(el);
      } else {
          console.warn("Parent element not found for a watched item");
      }
  });
</script>

<script>
  class StickyHeader extends HTMLElement {
    connectedCallback() {
      this.header = document.querySelector('.section-header');
      this.stickyType = this.getAttribute('data-sticky-type');
      this.themeMode = this.getAttribute('data-theme-mode');
      this.currentScrollTop = 0;

      this.setHeaderHeight();
      this.updateHeaderTheme();

      window.addEventListener('resize', this.setHeaderHeight.bind(this));
      window.addEventListener('scroll', this.onScroll.bind(this), false);
    }

    setHeaderHeight() {
      document.documentElement.style.setProperty('--header-height', `${this.header.offsetHeight}px`);
    }

    updateHeaderTheme() {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

      if (scrollTop === 0) {
        if (this.themeMode === 'transparent') {
          this.header.classList.add('transparent');
          this.header.classList.remove('scrolled-past-header');
        } else {
          this.header.classList.remove('transparent');
        }
      }
    }

    onScroll() {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      const linkElement = document.querySelector('.header--middle-center a.header__heading-link');
      const menuItems = document.querySelectorAll('.header__menu-item');
      const cartIcons = document.querySelectorAll('.cart-color');

      if (!linkElement) return;

      const isLargeScreen = window.matchMedia('(min-width: 990px)').matches;
      const isMobileScreen = window.matchMedia('(max-width: 749px)').matches;

      // Schakel logo-logica uit op mobiel
      if (isMobileScreen) {
        cartIcons.forEach(cartIcon => cartIcon.style.color = 'black'); // Standaard zwart maken
        menuItems.forEach(item => item.style.color = 'black');
        linkElement.style.backgroundImage = ''; // Verwijder aangepaste logo-logica
        return;
      }

      if (isLargeScreen) {
        if (this.stickyType === 'on-scroll-up') {
          if (scrollTop > this.currentScrollTop && scrollTop > 100) {
            this.header.classList.add('hidden');
            cartIcons.forEach(cartIcon => cartIcon.style.color = 'var(--color-gray)');
            menuItems.forEach(item => item.style.color = 'var(--color-gray)');
          } else if (scrollTop < this.currentScrollTop) {
            this.header.classList.remove('hidden');
            this.header.classList.add('scrolled-past-header');
            linkElement.style.backgroundImage = 'var(--logo-black) !important';
            cartIcons.forEach(cartIcon => cartIcon.style.color = 'black');
            menuItems.forEach(item => item.style.color = 'black');
          }
        } else if (this.stickyType === 'always') {
          this.header.classList.add('scrolled-past-header');
          linkElement.style.backgroundImage = 'var(--logo-black) !important';
          cartIcons.forEach(cartIcon => cartIcon.style.color = 'black');
          menuItems.forEach(item => item.style.color = 'black');
        }

        if (scrollTop === 0) {
          this.updateHeaderTheme();
          linkElement.style.backgroundImage = 'var(--logo-white)';
          cartIcons.forEach(cartIcon => cartIcon.style.color = 'var(--menu-font-color)');
          menuItems.forEach(item => item.style.color = 'var(--menu-font-color)');
        }
      }

      this.currentScrollTop = scrollTop;
    }
  }

  customElements.define('sticky-header', StickyHeader);
</script>

