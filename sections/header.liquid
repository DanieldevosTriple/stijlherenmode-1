<script>
  class StickyHeader extends HTMLElement {
    connectedCallback() {
      // Get header element and settings
      this.header = document.querySelector('.section-header');
      this.stickyType = this.getAttribute('data-sticky-type');
      this.themeMode = this.getAttribute('data-theme-mode'); // Background color mode
      this.currentScrollTop = 0;

      // Initial setup for header styles
      this.setHeaderHeight();
      this.updateHeaderTheme();
      
      // Event listeners for scroll and resize
      window.addEventListener('resize', this.setHeaderHeight.bind(this));
      window.addEventListener('scroll', this.onScroll.bind(this), false);
    }

    setHeaderHeight() {
      // Set CSS variable for header height
      document.documentElement.style.setProperty('--header-height', `${this.header.offsetHeight}px`);
    }

    updateHeaderTheme() {
      // Update header theme based on scroll position and theme mode
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      if (scrollTop === 0) {
        if (this.themeMode === 'transparent') {
          this.header.classList.add('transparent');
          this.header.classList.remove('scrolled-past-header');
        } else if (this.themeMode === 'system') {
          // Use system preference for dark or light mode
          const darkMode = window.matchMedia('(prefers-color-scheme: dark)').matches;
          this.header.style.backgroundColor = darkMode ? '#000000' : '#ffffff';
          this.header.style.color = darkMode ? '#ffffff' : '#000000';
          this.header.classList.remove('transparent', 'scrolled-past-header');
        } else {
          // Default to solid background color
          this.header.classList.remove('transparent');
        }
      }
    }

    onScroll() {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

      // Sticky behavior logic
      if (this.stickyType === 'on-scroll-up') {
        if (scrollTop > this.currentScrollTop && scrollTop > 100) {
          this.header.classList.add('hidden');
        } else if (scrollTop < this.currentScrollTop) {
          this.header.classList.remove('hidden');
          this.header.classList.add('scrolled-past-header');
        }
      } else if (this.stickyType === 'always') {
        this.header.classList.add('scrolled-past-header');
      }

      // Reset to theme logic when at the top
      if (scrollTop === 0) {
        this.updateHeaderTheme();
      } else {
        this.header.classList.remove('transparent');
        this.header.classList.add('scrolled-past-header');
      }

      this.currentScrollTop = scrollTop;
    }
  }

  customElements.define('sticky-header', StickyHeader);
</script>

<script>
function adjustHeadingFontSize() {
  const bannerHeading = document.querySelector('.banner__heading');
  if (!bannerHeading) return;
  
  const parentWidth = bannerHeading.parentElement.clientWidth;
  let fontSize = parseInt(window.getComputedStyle(bannerHeading).fontSize, 10);
  
  // Adjust font size to fit within the parent's width
  while (bannerHeading.scrollWidth > parentWidth && fontSize > 0) {
    fontSize -= 1;
    bannerHeading.style.fontSize = `${fontSize}px`;
  }
}

// Initial adjustment
window.addEventListener('DOMContentLoaded', adjustHeadingFontSize);

// Adjust on window resize
window.addEventListener('resize', adjustHeadingFontSize);
</script>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const logoBlack = document.querySelector('.logo-black');
    const logoWhite = document.querySelector('.logo-white');
    const header = document.querySelector('.section-header');
    const menuItems = document.querySelectorAll('.header__menu-item');
    const cartColors = document.querySelectorAll('.cart-color');

    let lastScrollPosition = 0;

    // Helperfunctie om te bepalen of een kleur licht of donker is
    function isLightColor(color) {
        const rgb = color.match(/\d+/g).map(Number);
        const luminance = (0.299 * rgb[0] + 0.587 * rgb[1] + 0.114 * rgb[2]) / 255;
        return luminance > 0.5;
    }

    // Functie om tekstkleuren en logo's aan te passen op basis van de achtergrondkleur
    function adjustColorsAndLogos() {
        if (!header) return;

        const backgroundColor = window.getComputedStyle(header).backgroundColor;
        const isLightBackground = isLightColor(backgroundColor);

        // Logo aanpassen
        if (isLightBackground) {
            logoBlack.style.display = 'block';
            logoWhite.style.display = 'none';
        } else {
            logoBlack.style.display = 'none';
            logoWhite.style.display = 'block';
        }

        // Tekstkleur van menu-items en winkelmand aanpassen
        const textColor = isLightBackground ? 'black' : 'white';
        menuItems.forEach(item => item.style.color = textColor);
        cartColors.forEach(item => item.style.color = textColor);
    }

    // Functie voor scrollgedrag
    function handleScroll() {
        const currentScrollPosition = window.scrollY;

        if (currentScrollPosition === 0) {
            // Bovenaan: header transparant maken
            header.classList.remove('scrolled');
            header.classList.remove('hidden');

            // Wacht tot de transitie voltooid is voordat het logo wordt aangepast
            header.addEventListener('transitionend', function onTransitionEnd(event) {
                if (event.propertyName === 'background-color') {
                    adjustColorsAndLogos();
                    header.removeEventListener('transitionend', onTransitionEnd);
                }
            });
        } else if (currentScrollPosition > lastScrollPosition) {
            // Naar beneden scrollen
            header.classList.add('hidden'); // Header verbergen
        } else {
            // Naar boven scrollen
            header.classList.remove('hidden'); // Header tonen
            header.classList.add('scrolled'); // Solid achtergrond instellen
        }

        lastScrollPosition = currentScrollPosition; // Laatste scrollpositie bijwerken
    }

    // Initialisatie
    adjustColorsAndLogos();

    // Event listeners
    window.addEventListener('resize', adjustColorsAndLogos); // Logo en kleuren opnieuw berekenen bij resize
    window.addEventListener('scroll', handleScroll); // Scrollgedrag afhandelen
});
</script>

