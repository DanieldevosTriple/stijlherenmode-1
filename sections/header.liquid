{%- style -%}
  .header {
    padding: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px 3rem {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px 3rem;
  }

  /* Transparent header for desktop only */
  .header-wrapper--transparent {
    background-color: transparent;
    position: absolute;
    z-index: 10;
    width: 100%;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  /* For mobile devices, disable transparency */
  @media screen and (max-width: 750px) {
    .header-wrapper--transparent {
      background-color: white !important; /* Always solid background for mobile */
      position: relative;
    }

    .header-wrapper--transparent .header__heading-link,
    .header-wrapper--transparent .header__icon {
      color: black; /* Ensure icons and text are visible */
    }
  }

  /* Scroll-activated header */
  .scrolled-past-header .header-wrapper--transparent {
    background-color: white; /* Wordt wit bij scrollen */
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1); /* Optioneel: voeg een schaduw toe */
  }

  .scrolled-past-header .header-wrapper--transparent .header__heading-link,
  .scrolled-past-header .header-wrapper--transparent .header__icon {
    color: black; /* Zorg ervoor dat iconen en tekst zichtbaar blijven */
  }

  /* Standard transparant header */
  .section-header {
    position: -webkit-sticky;
    position: sticky;
    top: 0;
    z-index: 1000;
    transition: transform 0.3s ease, opacity 0.3s ease, background-color 0.3s ease, color 0.3s ease, width 0.3s ease;
    }

    .section-header.transparent {
        background-color: transparent;
        color: white;
    }

    .section-header.scrolled-past-header {
        background-color: white;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        color: black;
    }

    .section-header.hidden {
        transform: translateY(-100%);
        opacity: 0;
    }

    .section-header.reduce-logo .header__heading-logo-wrapper {
        width: 75%;
    }

  @media screen and (min-width: 750px) {
    .section-header {
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .header {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

