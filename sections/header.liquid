<script>
  class StickyHeader extends HTMLElement {
    connectedCallback() {
      // Get header element and settings
      this.header = document.querySelector('.section-header');
      this.stickyType = this.getAttribute('data-sticky-type');
      this.themeMode = this.getAttribute('data-theme-mode'); // Background color mode
      this.currentScrollTop = 0;

      // Initial setup for header styles
      this.setHeaderHeight();
      this.updateHeaderTheme();
      
      // Event listeners for scroll and resize
      window.addEventListener('resize', this.setHeaderHeight.bind(this));
      window.addEventListener('scroll', this.onScroll.bind(this), false);
    }

    setHeaderHeight() {
      // Set CSS variable for header height
      document.documentElement.style.setProperty('--header-height', `${this.header.offsetHeight}px`);
    }

    updateHeaderTheme() {
      // Update header theme based on scroll position and theme mode
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      if (scrollTop === 0) {
        if (this.themeMode === 'transparent') {
          this.header.classList.add('transparent');
          this.header.classList.remove('scrolled-past-header');
        } else if (this.themeMode === 'system') {
          // Use system preference for dark or light mode
          const darkMode = window.matchMedia('(prefers-color-scheme: dark)').matches;
          this.header.style.backgroundColor = darkMode ? '#000000' : '#ffffff';
          this.header.style.color = darkMode ? '#ffffff' : '#000000';
          this.header.classList.remove('transparent', 'scrolled-past-header');
        } else {
          // Default to solid background color
          this.header.classList.remove('transparent');
        }
      }
    }

    onScroll() {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

      // Sticky behavior logic
      if (this.stickyType === 'on-scroll-up') {
        if (scrollTop > this.currentScrollTop && scrollTop > 100) {
          this.header.classList.add('hidden');
        } else if (scrollTop < this.currentScrollTop) {
          this.header.classList.remove('hidden');
          this.header.classList.add('scrolled-past-header');
        }
      } else if (this.stickyType === 'always') {
        this.header.classList.add('scrolled-past-header');
      }

      // Reset to theme logic when at the top
      if (scrollTop === 0) {
        this.updateHeaderTheme();
      } else {
        this.header.classList.remove('transparent');
        this.header.classList.add('scrolled-past-header');
      }

      this.currentScrollTop = scrollTop;
    }
  }

  customElements.define('sticky-header', StickyHeader);
</script>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const logoBlack = document.querySelector('.logo-black');
  const logoWhite = document.querySelector('.logo-white');
  const header = document.querySelector('.section-header');

  let lastScrollPosition = 0; // Keep track of the last scroll position
  let isScrolling = false; // Debounce mechanism

  // Function to determine if the background color is light or dark
  function setLogoBasedOnBackground() {
    const backgroundColor = window.getComputedStyle(document.body).backgroundColor;
    const isLightBackground = isLightColor(backgroundColor);

    if (isLightBackground) {
      logoBlack.style.display = 'block';
      logoWhite.style.display = 'none';
    } else {
      logoBlack.style.display = 'none';
      logoWhite.style.display = 'block';
    }
  }

  // Helper function to calculate luminance
  function isLightColor(color) {
    const rgb = color.match(/\d+/g).map(Number); // Extract RGB values
    const luminance = (0.299 * rgb[0] + 0.587 * rgb[1] + 0.114 * rgb[2]) / 255;
    return luminance > 0.5; // Light if luminance is greater than 0.5
  }

  // Function to update header transparency, disabling it for mobile
  function updateHeaderTransparency() {
    const isMobile = window.innerWidth <= 750;

    if (isMobile) {
      if (!header.classList.contains('solid')) {
        header.classList.remove('transparent'); // Always remove transparent class for mobile
        header.classList.add('solid'); // Add a solid class to prevent flickering
        header.style.backgroundColor = 'white'; // Force solid white background
      }
    } else {
      if (header.classList.contains('solid')) {
        header.classList.remove('solid'); // Remove solid class for desktop
        header.classList.add('transparent'); // Apply transparency only for desktop
      }
    }
  }

  // Function to handle scroll behavior with debounce
  function handleScroll() {
    const currentScrollPosition = window.scrollY;

    // Only trigger if the scroll difference exceeds the threshold
    if (Math.abs(currentScrollPosition - lastScrollPosition) > 10) {
      if (window.innerWidth > 750) {
        // Only apply scrolling logic on desktop
        if (currentScrollPosition > lastScrollPosition) {
          // Scrolling down
          header.classList.add('hidden'); // Hide the header
        } else {
          // Scrolling up
          header.classList.remove('hidden'); // Show the header
        }
      }

      lastScrollPosition = currentScrollPosition; // Update the last scroll position
    }

    // Mark as still scrolling
    isScrolling = true;

    // Reset debounce after 100ms
    setTimeout(() => {
      isScrolling = false;
    }, 100);
  }

  // Initial function calls
  setLogoBasedOnBackground(); // Set logo based on initial background
  updateHeaderTransparency(); // Set header transparency based on viewport size

  // Event listeners
  window.addEventListener('resize', function () {
    setLogoBasedOnBackground(); // Recheck logo visibility
    updateHeaderTransparency(); // Recheck header transparency
  });

  window.addEventListener('scroll', function () {
    if (!isScrolling) {
      handleScroll();
    }
  }); // Handle scroll behavior with debounce
});
</script>

