{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'template-collection.css' | asset_url | stylesheet_tag }}

  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
  
  {% if section.settings.products_to_show > 0 %}
    {% assign recommendations_url = routes.product_recommendations_url | append: '?limit=' | append: section.settings.products_to_show %}
    {% include recommendations_url %}
  {% endif %}
  

<div
  class="color-{{ section.settings.color_scheme }} isolate gradient section-padding-bottom"
>
  <div
    class="collection"
    id="collection-{{ section.id }}"
    data-id="{{ section.id }}"
  >

    <slider-component class="col-12 slider-collection{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    <div class="col-12 collection__header container-desktop">
      <div class="collection__title title-wrapper--no-top-margin{% if show_mobile_slider %} title-wrapper--self-padded-tablet-down{% endif %} collection__title--desktop-slider">
        {%- if section.settings.title != blank -%}
          <h2 class="carouseltitle inline-richtext h2 {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}
      </div>
    </div>
    <ul
      id="Slider-{{ section.id }}"
      data-id="{{ section.id }}"
      class="slider-desktop slider--mobile container-desktop"
      role="list"
      aria-label="{{ 'general.slider.name' | t }}"
    >
      {%- assign shown_colors = ',' -%}
      {%- if recommendations.performed and recommendations.products_count > 0 -%}
        {%- assign products_to_show = recommendations.products -%}
      {%- else -%}
        {%- assign products_to_show = collections['best-selling'].products -%}
      {%- endif -%}
      
      {%- for product in products_to_show limit: section.settings.products_to_show -%}
        <li
          id="Slide-{{ section.id }}-{{ forloop.index }}"
          class="col-12 col-sm-6 col-lg-4 slider-item no-padding{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: {{ forloop.index }};"
          {% endif %}
        >
          <a href="{{ product.url }}">
            {% render 'card-product',
              card_product: product,
              media_aspect_ratio: section.settings.image_ratio,
              image_shape: section.settings.image_shape,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating,
              lazy_load: lazy_load,
              skip_styles: skip_card_product_styles,
              quick_add: section.settings.quick_add,
              section_id: section.id,
              featured_image: product.featured_image
            %}
          </a>
        </li>
      {%- endfor -%}
    </ul>    
    </slider-component>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.featured-collection.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "t:sections.featured-collection.settings.title.default",
      "label": "t:sections.featured-collection.settings.title.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "enable_fallback",
      "label": "Use best-selling products as fallback",
      "default": true
    }    
  ],
  "presets": [
    {
      "name": "Recommended products",
      "settings": {
        "title": "You may also like",
        "enable_fallback": true
      }
    }
  ]
}
{% endschema %}
