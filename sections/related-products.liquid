{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'template-collection.css' | asset_url | stylesheet_tag }}

  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

  <div class="color-{{ section.settings.color_scheme }} isolate gradient section-padding-bottom">
    <div class="collection" id="collection-{{ section.id }}" data-id="{{ section.id }}">
      <slider-component class="col-12 slider-collection{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <div class="col-12 collection__header container-desktop">
          <div class="collection__title title-wrapper--no-top-margin collection__title--desktop-slider">
            {%- if section.settings.title != blank -%}
              <h2 class="carouseltitle inline-richtext h2">
                {{ section.settings.title }}
              </h2>
            {%- endif -%}
          </div>
        </div>
        <ul id="Slider-{{ section.id }}" class="slider-desktop slider--mobile container-desktop" role="list">
          {%- assign collection_to_show = product.collections.first -%}
  
          {%- if collection_to_show == null -%}
            {%- assign collection_to_show = collections['default-collection'] -%}
          {%- endif -%}
  
          {%- assign products_shown = 0 -%}
  
          {%- for product in collection_to_show.products -%}
            {%- if product.id != product.id -%} {# Vermijd duplicaten: het huidige product uitsluiten #}
              <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="col-12 col-sm-6 col-lg-4 slider-item">
                <a href="{{ product.url }}">
                  {% render 'card-product',
                    card_product: product,
                    media_aspect_ratio: section.settings.image_ratio,
                    image_shape: section.settings.image_shape,
                    show_secondary_image: section.settings.show_secondary_image,
                    show_vendor: section.settings.show_vendor,
                    show_rating: section.settings.show_rating,
                    section_id: section.id
                  %}
                </a>
              </li>
              {%- assign products_shown = products_shown | plus: 1 -%}
            {%- endif -%}
  
            {%- if products_shown >= section.settings.products_to_show -%}
              {%- break -%}
            {%- endif -%}
          {%- endfor -%}
  
          {%- if products_shown == 0 -%}
            <li class="col-12">
              <p>{{ 'No related products found.' | t }}</p>
            </li>
          {%- endif -%}
        </ul>
      </slider-component>
    </div>
  </div>
  

{% schema %}
{
  "name": "t:sections.featured-collection.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "t:sections.featured-collection.settings.title.default",
      "label": "t:sections.featured-collection.settings.title.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "enable_fallback",
      "label": "Use best-selling products as fallback",
      "default": true
    }    
  ],
  "presets": [
    {
      "name": "Recommended products",
      "settings": {
        "title": "You may also like",
        "enable_fallback": true
      }
    }
  ]
}
{% endschema %}
