{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  @media (min-width: 750px) {
    .section-{{ section.id }} {
      padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section section-{{ section.id }} color-{{ section.settings.color_scheme }}">
  <div class="section__inner page-width">
    {%- if section.settings.title != blank -%}
      <h2 class="title {{ section.settings.heading_size }}">{{ section.settings.title }}</h2>
    {%- endif -%}

    <slider-component 
      class="slider-component{% if section.settings.full_width %} slider-component-full-width{% endif %}">
      <ul 
        class="grid product-grid contains-card grid--1-col-mobile grid--3-col-desktop"
        role="list" 
        aria-label="{{ 'general.slider.name' | t }}"
        id="Slider-{{ section.id }}">
        {%- for product in section.settings.collection.products limit: 10 -%}
          <li class="grid__item slider__slide">
            {% render 'card-product', card_product: product %}
          </li>
        {%- endfor -%}
      </ul>
      
      <div class="slider-buttons">
        <button 
          class="slider-button slider-button--prev"
          type="button"
          aria-label="Previous"
          onclick="moveSlider('Slider-{{ section.id }}', -1)">
          &#9664;
        </button>
        <button 
          class="slider-button slider-button--next"
          type="button"
          aria-label="Next"
          onclick="moveSlider('Slider-{{ section.id }}', 1)">
          &#9654;
        </button>
      </div>
    </slider-component>
  </div>
</div>

<script>
  function moveSlider(sliderId, direction) {
    const slider = document.getElementById(sliderId);
    const scrollAmount = slider.offsetWidth;
    slider.scrollBy({ left: scrollAmount * direction, behavior: 'smooth' });
  }
</script>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Featured Collection",
      "label": "Section Title"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding Top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 20
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
