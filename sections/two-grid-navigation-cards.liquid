{{ 'two-columns-overlay.css' | asset_url | stylesheet_tag }}

<div class="section page-width two-columns-overlay">
  <div class="grid">
    {% for block in section.blocks %}
      <div class="grid__item one-half">
        <div class="image-overlay-block">
          {% if block.settings.image != blank %}
            <div class="image-overlay-block__image" style="background-image: url({{ block.settings.image | img_url: 'master' }});">
                {% if block.settings.button_link != blank %}
                  <a href="{{ block.settings.button_link }}" class="button">{{ block.settings.button_text }}</a>
                {% endif %}
              <div class="image-overlay-block__content">
                {% if block.settings.title != blank %}
                  <h3 class="image-overlay-block__title">{{ block.settings.title }}</h3>
                {% endif %}
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>

  {% schema %}
{
  "name": "Two Grid Nav",
  "settings": [],
  "blocks": [
    {
      "type": "block",
      "name": "Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Learn More"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Two Grid Nav",
      "category": "Custom"
    }
  ]
}
{% endschema %}